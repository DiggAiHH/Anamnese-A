{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "types": ["jest", "react", "node"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "**/*.native.ts",
    "**/*.native.tsx",
    "**/*.android.ts",
    "**/*.android.tsx",
    "**/*.ios.ts",
    "**/*.ios.tsx"
  ]
}
